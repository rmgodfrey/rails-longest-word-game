<h1>New game</h1>

<ul class="letter-container">
  <% @letters.each do |letter| %>
    <li class="letter"><%= letter %></li>
  <% end %>
</ul>

<form action="/score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="word">What is the longest word you can find?</label>
  <input class="left-input" type="text" id="word" name="word"><input type="submit" class="right-input" value="Play">
</form>
